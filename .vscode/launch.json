{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python 调试程序: 从 YAML 文件读取参数",
            "type": "debugpy",
            "justMyCode": false,
            "request": "launch",
            "module": "accelerate.commands.launch", 
            "args": ["--num_processes=1", "main_my_local.py",
            ],
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0",
                "NCCL_IB_DISABLE": "1",
                "NCCL_P2P_DISABLE": "1"
            },

        }
    ]
}
